<!-- The ID of the search input can be used with the searchable js
-->
<div class="card">
  <div class="card-header">

    <div class="row">
      <!-- search input -->
      <div class="col-12 col-md-12 col-lg-9">
        <div class="input-group">
          <input  id="search" value="" class="form-control" type="search" placeholder="Search..." aria-label="Search...">
          <div class="input-group-append">
            <span class="input-group-text"><i class="fa fa-search" aria-hidden="true"></i></span>
          </div>
        </div>
      </div>
      <!-- button to expand advanced search -->
      <div class="col-12 col-md-12 col-lg-3 my-1">
        <p class="card-title"><a data-toggle="collapse" href="#advanced_search">Advanced Search</a></p>
      </div>
    </div>

  </div>

  <!-- card content: advanced search options -->
  <div id="advanced_search" class="card-body collapse">
    <div class="row">
      {{> dropdown-partial option_text="Video" dropdown_id="video"}}
      {{> dropdown-partial option_text="MP3" dropdown_id="mp3"}}
      {{> dropdown-partial option_text="New" dropdown_id="new"}}
    </div>
  </div>
</div>
